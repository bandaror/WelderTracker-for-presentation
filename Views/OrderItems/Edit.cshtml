@model WelderTracker150722.Models.OrderItemsModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderItems</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirNumber" class="control-label"></label>
                <input asp-for="FirNumber" class="form-control" />
                <span asp-validation-for="FirNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToCompleteBy" class="control-label"></label>
                <input asp-for="ToCompleteBy" class="form-control" />
                <span asp-validation-for="ToCompleteBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value=@OrderStatus.Completed>Completed</option>
                    <option value=@OrderStatus.Started>Started</option>
                    <option value=@OrderStatus.Awaiting>Awaiting</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
    <label asp-for="Welders" class="control-label"></label>
    <select asp-for="WeldersId" class="form-control" asp-items="ViewBag.WelderId">
        <option value="">-- Select Welder --</option>
    </select>
    <span asp-validation-for="WeldersId" class="text-danger" />
</div>
            <div class="form-group">
                <label asp-for="CompletedAmount" class="control-label"></label>
                <input asp-for="CompletedAmount" class="form-control" />
                <span asp-validation-for="CompletedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
